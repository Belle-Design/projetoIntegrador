<%- include('./partials/header') %>

<body>

    <%- include('./partials/headerNavBar') %>
    <link rel="stylesheet" href="/css/cadastro.css">

    <main>

        <section id="section2">
            <div class="body">
                <form action="/areadocliente/editarcadastro?_method=PUT" method="post" enctype="multipart/form-data">
                    <h1>Criar Conta</h1>
                    <div class="file">
                        <label for="avatar">Carregar Foto</label>
                        <input type="file" id="avatar" name="avatar">
                    </div>
                    <div class="input">
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email" required >
                    </div>
                    <div class="input">
                        <label for="senha">Senha</label>
                        <input type="password" id="senha" name="senha" required>
                    </div>
                    <div class="input">
                        <label for="confirmarsenha">Confirmar Senha</label>
                        <input type="password" id="confirmarsenha" name="confirmarsenha" required>
                    </div>
                    <div class="input">
                        <label for="cpf/cnpj">CPF/CNPJ</label>
                        <input type="text" id="cpfcnpj" name="cpfcnpj" required>
                    </div>
                    <div class="input">
                        <label for="nome">Nome</label>
                        <input type="text" id="nome" name="nome" required>
                    </div>
                    <div class="input">
                        <label for="sobrenome">Sobrenome</label>
                        <input type="text" id="sobrenome" name="sobrenome" required>
                    </div>
                    <div class="input">
                        <label for="birthday">Data de Nascimento</label>
                        <input type="date" id="birthday" name="birthday" required>
                    </div>

                    <div class="input">
                        <label for="phone">Telefone</label>
                        <input type="tel" id="phone" name="phone" placeholder="(11)999999999" pattern="([0-9]{2})[0-9]{9}"
                            required>
                    </div>
                    <div class="input">
                        <div>
                            <input type="checkbox" name="receberemail" id="receberinformacoes-email" value="email">
                            <label for="receberinformacoes-email">Quero receber promoções e informações por
                                email</label>
                        </div>
                        <div>
                            <input type="checkbox" name="receberem" id="receberinformacoes-sms" value="sms/whatsapp">
                            <label for="receberinformacoes-sms">Quero receber promoçoes e informações por
                                sms/whatsapp</label>
                        </div>
                    </div>

                    <button type="submit" >Enviar</button>
                </form>
            </div>
        </section>

    </main>
</body>
<%- include('./partials/footer') %>